<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- style for layout when no results found -->
    <style name="emptyTextView">
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:padding">@dimen/list_item_padding</item>
        <item name="android:textSize">30sp</item>
    </style>

    <!-- publication date -->
    <style name="publicationDate">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:padding">@dimen/text_padding</item>
    </style>

    <!-- section name -->
    <style name="sectionName">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:padding">@dimen/text_padding</item>
    </style>

    <!-- article title -->
    <style name="webTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:padding">@dimen/text_padding</item>
    </style>

    <!-- article trail text -->
    <style name="trailText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:padding">@dimen/text_padding</item>
    </style>


</resources>
